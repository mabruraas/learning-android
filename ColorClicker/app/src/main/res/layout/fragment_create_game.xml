<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setup.fragment.CreateGameFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:id="@+id/grid_layout_create"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_switch_create_private_public"
            android:layout_column="0"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:text="@string/create_switch_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:id="@+id/switch_create_private_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"/>
    </GridLayout>


    <EditText
        android:id="@+id/etxt_create_max_players"
        android:singleLine="true"
        android:hint="@string/create_max_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_layout_create"
        android:ems="10"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/etxt_create_rounds"
        android:singleLine="true"
        android:hint="@string/create_game_rounds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxt_create_max_players"
        android:ems="10"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/btn_create_create_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/create_new_game_txt"
        android:gravity="center_horizontal" />

</RelativeLayout>
