<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.bacheloroppgaven.android.colorclicker">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".setup.activity.SelectModeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".game.activity.GameActivity" />
        <activity android:name=".setup.activity.JoinGameActivity" />
        <activity android:name=".setup.activity.CreateGameActivity" />
        <activity android:name=".lobby.activity.LobbyActivity" />

        <service
            android:name=".setup.service.GameFinderService"
            android:exported="false"></service>
    </application>

</manifest>
